{
  "_comment": "Example configurations for GTM MCP Server using Application Default Credentials",
  
  "basic_example": {
    "_description": "Basic configuration with service account file",
    "mcpServers": {
      "gtm-mcp": {
        "command": "gtm-mcp",
        "env": {
          "GOOGLE_APPLICATION_CREDENTIALS": "/path/to/your/service-account-key.json",
          "GOOGLE_PROJECT_ID": "your-project-id"
        }
      }
    }
  },
  
  "with_account_restriction": {
    "_description": "Configuration with account ID restriction",
    "mcpServers": {
      "gtm-mcp": {
        "command": "gtm-mcp",
        "env": {
          "GOOGLE_APPLICATION_CREDENTIALS": "/path/to/your/service-account-key.json",
          "GOOGLE_PROJECT_ID": "your-project-id",
          "GTM_ACCOUNT_ID": "1234567890"
        }
      }
    }
  }
}
